extends layout
include utils.pug

block content
  .main
    .sub_abc
      .sub_form
        if !authenticated
          .form_sub
            if !authenticated
                form.home_form(action="/users/signup" method="post")
                  h5.name2 New Here? Create a Free Account!
                  input(type="hidden" name="_csrf" value=csrfToken)
                  div
                    //- label.box2 Username:
                    input.box3(type="text" name="username" placeholder="Username" required)
                  div
                    //- label.box2 Display Name:
                    input.box3(type="text" name="displayName" placeholder="Display Name" required)
                  div
                    //- label.box2 Email:
                    input.box3(type="email" name="email" placeholder="Email" required)
                  div
                    //- label.box2 Password:
                    input.box3(type="password" name="password" placeholder="Password" required)
                  div
                    //- label.box2 Confirm Password:
                    input.box3(type="password" name="confirmPassword" placeholder="Confirm Password" required)
                  div
                    button.smallBtn(type="submit") Sign Up
                +validationErrorSummary(errors)
    .sub_b
      .sub_b2
        h2.b2 Highest Rated Visited
          .sub_b2a
            ul.rem
              each topCountry in visited
                li.print= topCountry
      .sub_b3
        h2.b2 Highest Rated Must Travel
          .sub_b3a
            ul.rem
              each topCountry in wantToVisit
                li.print= topCountry
      .sub_b4
        h2.b2 Highest Rated Local Location
          .sub_b4a
            ul.rem
              each topCountry in nearby
                li.print= topCountry
