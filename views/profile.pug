extends layout

block content
	.sub_a
		a(href='/'): button.btn2 Home
		if authenticated
			a(href=`/users/${curUser.id}`): button.btn2 My Profile
		a(href='/countries'): button.btn2 Countries
		a(href='/team'): button.btn2 Meet The Team

	.gridContainer
		.leftSideColumn
			.leftColumnTitleDecore
				h2.leftSideColumnTitle Passports
			.medium
				.localPassport

				ul.ImgContainer
					li
						a(class= "passport_btn")
							img.localImg(src="/Visited.png"  value=passportstampids[0])
				.goToPassport

				ul.ImgContainer
					li
						a(class= "passport_btn")
							img.localImg(src="/WantTo.png" value=passportstampids[1])
				.visitedPassport

				ul.ImgContainer
					li
						a(class= "passport_btn")
							img.localImg(src="/Local.png" value=passportstampids[2])
		.profileBody
			.myStampsHeader
				h2.middle My Stamps
			ul.omg
				each id, name in resObj
					if (name!=='undefined')
						a(href="/stamps/"+id id=id+'_stamp').tripName
							h3=name
								li.imgLiTag
									img(src=obj[name] class="stampImg" name=name)

		.rightSideColumn
			.explore
				h2.leftSideColumnTitle Explore

				select.need
					each value, key in tagsObj
						option.default(value="default" selected disabled hidden) Filter by Tag
						option(id=`${value}` class='tags' value=`${value}`)=key
	block scripts
		script(src='../javascripts/profile.js')
