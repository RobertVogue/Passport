extends layout

block content
	.sub_a
		a(href='/'): button.btn2 Home
		if authenticated
			a(href=`/passports`): button.btn2 My Passports
		a(href='/team'): button.btn2 Meet The Team

	.gridContainer
		.leftSideColumn
			.leftColumnTitleDecore
				h2.leftSideColumnTitle Passports
			.medium
				.localPassport

				ul.ImgContainer
					li
						a(class="passportLocal_btn")
							img.localImg(src="/Visited.png")
				.goToPassport

				ul.ImgContainer
					li
						a(class='passportGoingTo_btn')
							img.localImg(src="/WantTo.png")
				.visitedPassport

				ul.ImgContainer
					li
						a(class='passportVisited_btn')
							img.localImg(src="/Local.png")
		.profileBody
			.myStampsHeader
				h2.middle My Stamps
			ul.omg
				each value, name in resObj
					if (name!=='undefined')
						a(href=("/stamps/"+value[0]) id=(value[0]+'_stamp') value=(value[1])).tripName
							h3=name
								li.imgLiTag
									img(src=obj[name] class="stampImg mask1" name=name)

		.rightSideColumn
			.explore
				h2.leftSideColumnTitle Explore

				select.need
					each value, key in tagsObj
						option.default(value="default" selected disabled hidden) Filter by Tag
						option(id=`${value}` class='tags' value=`${value}`)=key
	script(src='../javascripts/profile.js')
