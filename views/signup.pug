extends layout

include utils.pug

block content
	div.largerContainer
		div.logContainer
			form(action="/users/signup" method="post")
				h2.headerr Account Creation
				input(type="hidden" name="_csrf" value=csrfToken)
				div
					label.box Username:
					input.box(type="text" name="username" placeholder="Username" value=username required)
				div
					label.box Display Name:
					input.box(type="text" name="displayName" placeholder="Display Name" value=displayName required)
				div
					label.box Email:
					input.box(type="email" name="email" placeholder="Email" value=email required)
				div
					label.box Password:
					input.box(type="password" name="password" placeholder="Password" required)
				div
					label.box Confirm Password:
					input.box(type="password" name="confirmPassword" placeholder="Confirm Password" required)
				div
					button(type="submit" class="sub") Submit Form
			form.demo_container(method = 'post' action = '/users/demo')
				div
					button(type = 'submit' class='login_button2') Demo Login
			+validationErrorSummary(errors)
